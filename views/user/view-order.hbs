<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Products</th>
                        <th scope="col">Products Image</th>
                        <th scope="col">Discription</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Payment Method</th>
                        <th scope="col"> Status</th>
                        <th scope="col">Payment Date</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each info}}
                        <tr>
                            
                            <td>{{@index}}</td>
                            <td>{{this.products.Name}}</td>
                            <td><img src="/admin_image/{{this.products._id}}.jpg" style="width: 200px; height: 200px;" alt=""></td>
                            <td>{{this.products.Discription}}</td>
                            <td>{{this.products.Price}}</td>
                            <td>{{this.quantity}}</td>
                            <td>{{this.pay}}</td>
                            <td>{{this.status}}</td>
                            <td>{{this.date}}</td>
                           
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>